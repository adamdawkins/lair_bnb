<div id="<%= dom_id bookmark %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= bookmark.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Property.references:</strong>
    <%= bookmark.property.references %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this bookmark", bookmark, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this bookmark', edit_bookmark_path(bookmark), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
